<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvimage"
    app:cardBackgroundColor="@color/backgroundcolor"
    card_view:cardElevation="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:maxHeight="220dp"
            android:adjustViewBounds="true"
            android:id="@+id/imgur_img_album_cv"
            android:layout_weight="4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:layout_weight="7">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgur_album_title_cv"
                android:text="title"
                android:textStyle="bold"
                android:lines="1"
                android:singleLine="true"
                android:layout_weight="3"
                android:gravity="left"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/rest_text"
                android:layout_toStartOf="@+id/rest_text" />

                <TextView
                    android:id="@+id/rest_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:layout_toLeftOf="@+id/spinnerRest"
                    android:layout_toStartOf="@+id/spinnerRest"
                    android:text="Rest "/>
                <TextView
                    android:id="@+id/switch_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    android:layout_toLeftOf="@+id/switch_cv_image_time_or_rep"
                    android:layout_toStartOf="@+id/switch_cv_image_time_or_rep"
                    android:text=""/>
                <com.rey.material.widget.Spinner
                    android:id="@+id/spinnerRest"
                    android:textAlignment="center"
                    android:paddingTop="5dp"
                    app:spn_arrowSize="0dp"
                    app:spn_dividerColor="@color/tool_bar_color"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:dropDownWidth="wrap_content"
                    android:layout_toLeftOf="@id/switch_text"
                    android:layout_toStartOf="@id/switch_text"
                    android:background="@color/colorPrimary"/>

                <com.rey.material.widget.Switch
                    style="@style/Material.Widget.Switch"
                    android:padding="5dp"
                    android:id="@+id/switch_cv_image_time_or_rep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:background="@color/colorPrimary"
                  />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/slide_markers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:background="@color/colorPrimary">
                <TextView
                    android:id="@+id/slider_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:text=""/>
            </RelativeLayout>
                   <RelativeLayout
                       android:id="@+id/switch_relative_layout"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@color/colorPrimary"
                       android:layout_marginBottom="5dp">

                   <LinearLayout
                       android:id="@+id/spinners_layout"
                       android:layout_alignParentRight="true"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:background="@color/colorPrimary"
                       android:visibility="invisible">

                        <com.rey.material.widget.Spinner
                            android:id="@+id/spinner1"
                            app:spn_labelEnable="true"
                            app:spn_label="     Set 1"
                            android:layout_gravity="right"
                            app:spn_arrowSize="0dp"
                            android:gravity="left"
                            app:spn_dividerColor="@color/tool_bar_color"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:dropDownWidth="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"/>
                        <com.rey.material.widget.Spinner
                            android:id="@+id/spinner2"
                            app:spn_labelEnable="true"
                            app:spn_label="     Set 2"
                            android:textAlignment="inherit"
                            app:spn_arrowSize="0dp"
                            app:spn_dividerColor="@color/tool_bar_color"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:dropDownWidth="wrap_content"
                            android:layout_weight="1"

                            android:background="@color/colorPrimary"
                           />
                        <com.rey.material.widget.Spinner
                            android:id="@+id/spinner3"
                            app:spn_labelEnable="true"
                            app:spn_label="     Set 3"
                            android:textAlignment="center"
                            app:spn_arrowSize="0dp"
                            app:spn_dividerColor="@color/tool_bar_color"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:dropDownWidth="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"/>

                        <com.rey.material.widget.Spinner
                            android:id="@+id/spinner4"
                            app:spn_labelEnable="true"
                            app:spn_label="     Set 4"
                            android:textAlignment="center"
                            app:spn_arrowSize="0dp"
                            app:spn_dividerColor="@color/tool_bar_color"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:dropDownWidth="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"/>

                       <com.rey.material.widget.Spinner
                           android:id="@+id/spinner5"
                           app:spn_labelEnable="true"
                           app:spn_label="     Set 5"
                           android:textAlignment="center"
                           app:spn_arrowSize="0dp"
                           app:spn_dividerColor="@color/tool_bar_color"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:dropDownWidth="wrap_content"
                           android:layout_weight="1"
                           android:background="@color/colorPrimary"/>

                             </LinearLayout>
                       <LinearLayout
                           android:id="@+id/slide_layout"
                           android:layout_alignParentRight="true"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:background="@color/colorPrimary"
                           android:visibility="invisible"
                           >

                           <SeekBar
                               xmlns:app="http://schemas.android.com/apk/res-auto"
                               android:id="@+id/slider"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:gravity="left"
                               android:layout_gravity="left"
                               android:layout_weight="3"
                               android:max="120"
                               android:paddingLeft="30dp"
                               android:paddingRight="30dp"
                               android:background="@color/colorPrimary"
                               />
                               </LinearLayout>



                   </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>